@model Drinks.Web.Models.Admin.CreateAccountModel

@{
    ViewBag.Title = "Create Account";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Create a new account</h1>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-12">
        @Html.BootstrapValidationSummary()
    </div>
</div>
@if (Model != null && !string.IsNullOrWhiteSpace(Model.SuccessMessage))
{
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-dismissable alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                @Model.SuccessMessage
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm("CreateAccount", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                <label class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Name, new { placeholder = "Levi", @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Username</label>
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.TextBoxFor(x => x.Username, new { placeholder = "levi.botelho", @class = "form-control" })<span class="input-group-addon">@@satimo.fr</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Badge ID</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.BadgeId, new { placeholder = "5A41B89EF0", @class = "form-control", maxlength = 20 })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @Html.EditorFor(x => x.IsAdmin)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        }
    </div>
</div>