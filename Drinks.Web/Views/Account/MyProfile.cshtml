@model Drinks.Web.Models.Account.MyProfileModel

@{
    ViewBag.Title = "My Profile";
}

<div class="row">
    <div class="col-sm-12">
        <h1>My Profile</h1>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-12">
        @Html.BootstrapValidationSummary()
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        @if (Model != null && !string.IsNullOrWhiteSpace(Model.SuccessMessage))
        {
            <div class="alert alert-dismissable alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                @Model.SuccessMessage
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <h3>Change your password</h3>
    </div>
</div>
<div class="row">
    <div class="col-sm-8">
        <div class="well">
            @using (Html.BeginForm("MyProfile", "Account", FormMethod.Post, new { @class = "form-inline", role = "form" }))
            {
                <div class="form-group">
                    <label class="sr-only">Old Password</label>
                    @Html.PasswordFor(x => x.OldPassword, new { placeholder = "Old Password", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="sr-only">New Password</label>
                    @Html.PasswordFor(x => x.NewPassword, new { placeholder = "New Password", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="sr-only">Confirm New Password</label>
                    @Html.PasswordFor(x => x.ConfirmNewPassword, new { placeholder = "Confirm New Password", @class = "form-control" })
                </div>
                <input type="submit" class="btn btn-primary pull-right" value="Change Password" />
            }
        </div>
    </div>
</div>